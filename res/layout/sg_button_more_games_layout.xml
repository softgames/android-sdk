<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <ImageButton android:id="@+id/sg_button_more_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sg_button_more_games_selector"
        android:layout_gravity="top|right"
        />
    
    <TextView android:id="@+id/sg_ticker_button_more_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sg_ticker_new_games"
        android:layout_gravity="bottom|left"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFFFFF"/>

</FrameLayout>
