<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Styles for the Softgames objects. -->
    <style name="SGText">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">26sp</item>        
    </style>
    
    <style name="SGText.Divider">
           <item name="android:paddingTop">14dp</item>
           <item name="android:paddingBottom">14dp</item>
    </style>
    
    <style name="SGText.Button">
        <item name="android:background">@drawable/sg_button_play_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>
    
    <style name="SGDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#5B6065</item>
       
    </style>
    
    <style name="SGDialogTitleText">
        <item name="android:textSize">26sp</item>
    </style>

</resources>